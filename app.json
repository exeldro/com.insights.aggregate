{
    "id": "com.insights.aggregate",
    "sdk": 2,
    "name": {
        "en": "Aggregated Insights"
    },
    "description": {
        "en": "Adds support for aggregated insights"
    },
    "images": { "large": "assets/images/large.png", "small": "assets/images/small.png" },
    "category": "tools",
    "version": "0.1.0",
    "compatibility": ">=1.5.0",
    "author": {
        "name": "Bas van Meel",
        "email": "exelsor@hotmail.com"
    },
	"contributors": {
        "developers": [
            {
                "name": "Bas van Meel",
				"email": "exelsor@hotmail.com"
            }
        ]
    },
	"contributing": {
        "donate": {
            "paypal": {
                "username": "basvm"
            }
        }
    },
    "bugs": {
        "url": "https://github.com/exeldro/com.insights.aggregate/issues"
    },
    "permissions": [
        "homey:manager:api"
    ],
    "flow": {
        "triggers": [
            {
                "id": "new_aggregation_value",
                "title": {
                    "en": "New aggregation value"
                },
                "tokens": [
                    {
                        "name": "name",
                        "type": "string",
                        "title": {
                            "en": "Name"
                        },
                        "example": "AvgPerHour"
                    },                
                    {
                        "name": "value",
                        "type": "number",
                        "title": {
                            "en": "Value"
                        },
                        "example": 1
                    },
                    {
                        "name": "uptodate",
                        "type": "boolean",
                        "title": {
                            "en": "Uptodate"
                        },
                        "example": true
                    }
                ]
            },
            {
                "id": "not_uptodate",
                "title": {
                    "en": "Not uptodate"
                },
                "tokens": [
                    {
                        "name": "name",
                        "type": "string",
                        "title": {
                            "en": "Name"
                        },
                        "example": "AvgPerHour"
                    }
                ]
            }
        ],
        "actions": [
            {
                "id": "calc",
                "title": {
                    "en": "Check aggregations for updates"
                }
            },
            {
                "id": "recalcAggregation",
                "title": {
                    "en": "Recalculate"
                },
                "args": [
                    {
                        "type": "text",
                        "name": "name",
                        "placeholder": {
                            "en": "Aggregation name"
                        }
                    }
                ]
            }
        ]
    }
}